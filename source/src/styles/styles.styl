@require 'colors'
@require 'typography'
@require 'variables'

*
    box-sizing border-box

html, body, #root
    min-height 100%
    height 100%

body
    margin 0
    -webkit-tap-highlight-color transparent

a
    text-decoration none

a, button
    &:active, &:focus
        outline none

input, textarea
    &:focus, &:active
        outline none

ul, ol
    margin 0
    padding 0