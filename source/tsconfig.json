{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "lib": ["es5", "es6", "dom"],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": ["src/**/*"],
    "files": ["src/index.d.ts"]
}
